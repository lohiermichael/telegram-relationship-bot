[flake8]
max-line-length = 88
exclude = .git,__pycache__,venv

# .pre-commit-config.yaml
repos:
  - repo: https://github.com/pre-commit/pre-commit
    rev: v2.9.3
    hooks:
      - id: trailing-whitespace
      - id: end-of-file-fixer
  - repo: https://github.com/psf/black
    rev: 21.7b0
    hooks:
      - id: black
